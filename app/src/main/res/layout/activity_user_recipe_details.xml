<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserRecipeDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/userDetailsDishName"
                android:text="Recipe Name"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/yellow_orange"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                android:background="@drawable/edit_form"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/userDetailsDishImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_margin="5dp"
                        android:padding="20dp"
                        app:shapeAppearanceOverlay="@style/roundedImageView"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/prepTimeDetails"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:hint="30 minutes"
                            android:textColorHint="#7D7D7D"
                            android:drawableLeft="@drawable/ic_prep_time"
                            android:drawablePadding="8dp"
                            android:layout_marginBottom="5dp"
                            android:padding="18dp"/>
                        <TextView
                            android:id="@+id/servingsDetails"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:hint="6 People"
                            android:textColorHint="#7D7D7D"
                            android:drawableLeft="@drawable/ic_servings"
                            android:drawablePadding="8dp"
                            android:padding="18dp"/>
                    </LinearLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="Instructions"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textSize="30sp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/userDetailsDishInstructions"
                android:text="Instructions"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Ingredients"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textSize="30sp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">
                    <TextView
                        android:id="@+id/mainIngredient1NameDetails"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="salt">
                        </TextView>
                    <TextView
                        android:id="@+id/mainIngredient1QuantityDetails"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="30">
                    </TextView>
                    <TextView
                        android:id="@+id/mainIngredient1UnitDetails"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="gram">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">
                    <TextView
                        android:id="@+id/mainIngredient2NameDetails"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="salt">
                    </TextView>
                    <TextView
                        android:id="@+id/mainIngredient2QuantityDetails"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="30">
                    </TextView>
                    <TextView
                        android:id="@+id/mainIngredient2UnitDetails"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="gram">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">
                    <TextView
                        android:id="@+id/mainIngredient3NameDetails"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="salt">
                    </TextView>
                    <TextView
                        android:id="@+id/mainIngredient3QuantityDetails"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="30">
                    </TextView>
                    <TextView
                        android:id="@+id/mainIngredient3UnitDetails"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="gram">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>